package com.estock.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.estock.model.Orders;

@Repository
public interface OrdersRepository extends JpaRepository<Orders, Long> {
	
	@Query(value = "SELECT o.orderId, o.orderCustomer, o.orderDate, o.updateDate, o.itemCode, o.itemSoldQTY,"
			+ " o.itemPrice, o.orderTotalAmount, o.orderStatus FROM Orders o WHERE o.orderId = ?1")
	public Orders getOrderDetails(Long orderId);
	
}
